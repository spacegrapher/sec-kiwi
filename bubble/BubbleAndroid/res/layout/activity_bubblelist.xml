<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="108dp"
                android:layout_height="30dp"
                android:src="@drawable/bubble_logo" />

        </FrameLayout>

        <Button
            android:id="@+id/buttonListRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickRefresh"
            android:text="Refresh" />

        <Button
            android:id="@+id/buttonListCreateBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onClickCreateBubble"
            android:text="Create Bubble" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7F7F7F"
        android:visibility="gone" >

        <Button
            android:id="@+id/buttonListExplore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Explore" />

        <Button
            android:id="@+id/buttonListBubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Bubble" />

        <Button
            android:id="@+id/buttonListMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Me" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewBubbleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECF9C6" >

    </ListView>

</LinearLayout>