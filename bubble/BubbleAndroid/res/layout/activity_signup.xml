<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView
        android:id="@+id/textViewSignupEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address" />



    <EditText
        android:id="@+id/editTextSignupEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter email address"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>



    <TextView
        android:id="@+id/textViewSignupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />



    <EditText
        android:id="@+id/editTextSignupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your name" />



    <TextView
        android:id="@+id/textViewSignupPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" />


    <EditText
        android:id="@+id/editTextSignupPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword" />





    <Button
        android:id="@+id/buttonSignupCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCreateAccount"
        android:text="Create Account" />

</LinearLayout>